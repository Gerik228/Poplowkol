DECLARE
  l_url VARCHAR2(4000);
BEGIN
  -- Генерация URL для BLOB
  l_url := APEX_UTIL.GET_BLOB_FILE_SRC(
              p_item_name => 'P31_FILENAME', -- имя элемента загрузки файла
              p_id        => :P31_ID         -- ID записи
           );

  -- Обновляем таблицу
  UPDATE images
  SET url = l_url
  WHERE id = :P31_ID;
END;