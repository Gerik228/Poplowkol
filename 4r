declare
  l_clob      clob;
  l_ctx       apex_exec.t_context;
  l_bind_vals apex_exec.t_values;
begin
  -- Заполняем массив значений вручную
  l_bind_vals(1).name  := 'X01';
  l_bind_vals(1).value := apex_exec.t_value(apex_application.g_x01);

  -- Открываем запрос
  l_ctx := apex_exec.open_query_context(
    p_location     => apex_exec.c_location_local_db,
    p_sql_query    => q'~
      select des_test
        from bi_portal_faq
       where id = to_number(:x01)
    ~',
    p_max_rows     => 1,
    p_bind_names   => apex_util.string_to_table('X01'),
    p_bind_values  => l_bind_vals
  );

  if apex_exec.next_row(l_ctx) then
    l_clob := apex_exec.get_clob(l_ctx, 1);

    apex_json.open_object;
    apex_json.write('html', l_clob); -- отправляем clob в JSON
    apex_json.close_object;
  else
    apex_json.open_object;
    apex_json.write('error', 'Контент не найден');
    apex_json.close_object;
  end if;

  apex_exec.close(l_ctx);

exception
  when others then
    apex_exec.close(l_ctx);
    apex_json.open_object;
    apex_json.write('error', sqlerrm);
    apex_json.close_object;
end;