BEGIN
  FOR rec IN (SELECT title, text, created_at FROM news ORDER BY created_at DESC) LOOP
    HTP.P('<div class="news-item">');
    HTP.P('<h3>' || rec.title || '</h3>');
    HTP.P('<p>' || rec.text || '</p>');
    HTP.P('<small>' || TO_CHAR(rec.created_at, 'DD.MM.YYYY') || '</small>');
    HTP.P('</div>');
  END LOOP;
END;