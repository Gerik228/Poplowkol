declare
  l_cookie owa_cookie.cookie;
  l_username varchar2(100);
begin
  -- читаем куку REMEMBER_ME
  l_cookie := owa_cookie.get('REMEMBER_ME');

  if l_cookie.num_vals > 0 then
    l_username := l_cookie.vals(1);

    -- выполняем логин
    apex_authentication.login(
      p_username => l_username,
      p_password => null
    );

    -- редиректим на главную страницу
    apex_util.redirect_url('f?p=&APP_ID.:1:&SESSION.::NO::'); -- Page 1
  end if;
exception
  when others then
    null; -- не падаем, если что-то пошло не так
end;